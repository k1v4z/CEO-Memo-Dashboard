<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/stylesdash.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>DashBoard</title>
</head>

<body>
  <header>
    <!-- Nabar -->
    <div class="navbar">
      <div class="logo">
        <img src="/icon/LOGO.png" alt="">
      </div>
      <ul class="menu">
        <li class="btn n1 active" id="dash"><img src="/icon/icon-btn1.png" alt=""><span>DashBoard</span></li>
        <li class="btn n2" id="earnings"><img src="/icon/icon-btn2.png" alt=""><span>Total earnings </span></li>
        <li class="btn n3" id="vacationdays"><img src="/icon/icon-btn3.png" alt=""><span>Number of vacation days</span>
        </li>
        <li class="btn n4" id="benefits"><img src="/icon/icon-btn4.png" alt=""><span>Average benefits paid</span></li>
        <li class="btn n5" id="logout"><img src="/icon/icon-btn5.png" alt=""><span>Logout</span></li>
      </ul>
    </div>
    <!-- main content -->
    <div class="main-content">
      <!-- Logo CEO MEMO -->
      <section class="header">
        <h1 class="name-project">ceo memo system</h1>
        <span>
          <img id="alert-btn" src="/icon/Vector.png" alt="">
          <span class="number-info"></span>
        </span>
      </section>
      <!-- Icon Alert -->
      <div class="alert">
        <section class="alert-box">
          <section class="title-alert">
            <span>Important notification</span>
          </section>
          <ul class="box">
            <li onclick="window.location.href = './detail_announcement_1'">thong bao 1</li>
            <li onclick="window.location.href = './detail_announcement_2'">thong bao 2</li>
          </ul>
        </section>
      </div>
      <!-- DashBoard -->
      <div class="content ui1 active">
        <div class="el1">
          <div class="item">
            <h1>Total Earnings</h1>
            <p>856tr</p>
            <span>VND</span>
          </div>
          <div class="item">
            <h1>Vacation Days</h1>
            <p>31</p>
            <span>DAYS</span>
          </div>
          <div class="item">
            <h1>Average Benefits</h1>
            <p>856tr</p>
            <span>VND</span>
          </div>
        </div>
        <div class="chart-info">
          <h1>Tổng thu nhập</h1>
          <div class="content-chart">
            <div class="values">
              <span>160</span>
              <span>140</span>
              <span>120</span>
              <span>100</span>
              <span>80</span>
              <span>60</span>
              <span>40</span>
              <span>20</span>
            </div>
            <div class="chart">
              <div class="bar" style="height: 100px;"></div>
              <div class="bar" style="height: 77px;"></div>
              <div class="bar" style="height: 40px;"></div>
              <div class="bar" style="height: 20px;"></div>
              <div class="bar" style="height: 50px;"></div>
              <div class="bar" style="height: 60px;"></div>
              <div class="bar" style="height: 70px;"></div>
              <div class="bar" style="height: 80px;"></div>
              <div class="bar" style="height: 90px;"></div>
              <div class="bar" style="height: 100px;"></div>
              <div class="bar" style="height: 110px;"></div>
              <div class="bar" style="height: 120px;"></div>
            </div>
          </div>
          <div class="labels">
            <span>Tháng 1</span>
            <span>Tháng 2</span>
            <span>Tháng 3</span>
            <span>Tháng 4</span>
            <span>Tháng 5</span>
            <span>Tháng 6</span>
            <span>Tháng 7</span>
            <span>Tháng 8</span>
            <span>Tháng 9</span>
            <span>Tháng 10</span>
            <span>Tháng 11</span>
            <span>Tháng 12</span>
          </div>
        </div>
        <div class="table-info">
          <section>
            <h2>Employee info</h2>
            <div class="info-employee">
              <table id="employee-table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Ethnicity</th>
                    <th>Gender</th>
                    <th>Plan Name</th>
                    <th>Pay Rate</th>
                  </tr>
                </thead>
                <tbody>
                  <%listEmployee.forEach((employee) => {%>
                      <tr>
                        <td><%=employee.FullName%></td>
                        <td><%=employee.ETHNICITY%></td>
                        <td><%=employee.CURRENT_GENDER%></td>
                        <td><%=employee.BENEFIT_PLAN.PLAN_NAME%></td>
                        <td><%=employee.PayRate%></td>
                      </tr>
                  <%})%>                   
                </tbody>
              </table>
            </div>
          </section>
          <section>
            <h2>Vacation Days</h2>
            <div class="info-vacationdays">
              <table id="vacationdays">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Vacation Days</th>
                  </tr>
                </thead>
                <tbody>
                  <%listEmployee.forEach((employee)=> {%>
                    <tr>
                      <td>
                        <%=employee.FullName%>
                      </td>
                      <td>
                        <%=employee.CURRENT_GENDER%>
                      </td>
                      <td>
                        <%=employee.VacationDays%>
                      </td>
                    </tr>
                    <%})%>
                </tbody>
              </table>
            </div>
          </section>
        </div>
      </div>
    </div>
  </header>
  <script src="/js/chart.min.js"></script>
  <script src="/js/app.js"></script>
</body>

</html>